<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3" id="tulkas">
          <h1 class="text-center" style="color: #ff79c6;">Contato</h1>
          <p class="text-center lead" style="color: #ff79c6;">Crie ou edite seu contato abaixo.</p>

          <%- include('includes/messages') %>

            <% if(contato._id) { %>
              <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
                <% } else { %>
                  <form class="form-contato" action="/contato/register" method="POST">
                    <% } %>
                      <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                      <div class="form-group">
                        <label style="color: #ff79c6;">Nome</label>
                        <input style="color:#e52bcb; background-color:#323949; border: none;"
                          value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                      </div>
                      <div class="form-group">
                        <label style="color: #ff79c6;">Sobrenome</label>
                        <input style="color:#e52bcb; background-color:#323949; border: none;"
                          value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                      </div>
                      <div class="form-group">
                        <label style="color: #ff79c6;">Email</label>
                        <input s style="color:#e52bcb; background-color:#323949; border: none;"
                          value="<%= contato.email %>" type="email" class="form-control" name="email">
                      </div>
                      <div class="form-group">
                        <label style="color: #ff79c6;">Telefone</label>
                        <input style="color:#e52bcb; background-color:#323949; border: none;"
                          value="<%= contato.numero %>" maxlength="13" type="tel" class="form-control" name="telefone">
                      </div>
                      <button type="submit" class="btn btn-primary">Salvar</button>
                  </form>


        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>